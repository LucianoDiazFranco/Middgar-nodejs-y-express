<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <h3 class="text-uppercase">Editando a una persona</h3>
            </div>
            <div class="card-body">
                <form action="/edit/{{persona.id}}" method="post">
                <div class="input-group mt-2">
                    <label for="DNI" class="input-group-text">DNI</label>
                    <input class="form-control" type="number" name="DNI" id="DNI" placeholder="Ejemplo: 42596459" value="{{persona.DNI}}"
                   required>
                </div>
                <div class="input-group mt-2">
                    <label for="nombre" class="input-group-text">Nombre</label>
                    <input class="form-control" type="text" name="nombre" id="nombre" value="{{persona.nombre}}" placeholder="Ejemplo: Luciano"
                    autofocus required>
                </div>
                <div class="input-group mt-2">
                    <label for="apellido" class="input-group-text">Apellido</label>
                    <input class="form-control" type="text" name="apellido" id="apellido" placeholder="Ejemplo: Diaz Franco" value="{{persona.apellido}}"
                   required>
                </div>
                <div class="input-group mt-2">
                    <label for="correo" class="input-group-text">Correo</label>
                    <input class="form-control" type="text" name="correo" id="correo" placeholder="Ejemplo: Diaz Franco" value="{{persona.correo}}"
                   required>
                </div>
                <div class="input-group mt-2">
                    <label for="fecha_nac" class="input-group-text">fecha_nac</label>
                    <input class="form-control" type="date" name="fecha_nac" id="fecha_nac" value="{{persona.fecha_nac}}" required>
                </div>
                <div class="form-group mt-4 d-grid gap-2">
                    <button class="btn btn-success">Actualizar</button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>