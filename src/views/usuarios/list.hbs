<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de personas</h3>
        {{#if personas}}
            <table class="table text-left">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Correo</th>
                        <th scope="col">telefono</th>
                        <th scope="col">Fecha_nac</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each personas}}
                        <tr>
                            <td>{{nombre}}</td>
                            <td>{{apellido}}</td>
                            <td>{{correo}}</td>
                            <td>{{telefono}}</td>
                            <td>{{fecha_nac}}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                    <i class="fa-solid fa-pencil"></i></a>
                                    <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                    <i class="fa-solid fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot >
                    <tr class="table-dark " >
                        <td colspan="6">Registro de Persona</td>
                    </tr>
                </tfoot>
            </table>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes crear uana persona</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este moton para que puedas registrar a una persona en la aplicacion</p>
                    <a href="#" class="btn btn-primary">Ir a crear</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>