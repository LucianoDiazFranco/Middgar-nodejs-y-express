
<main class="login-main">
  <div class="login-container">
    <!-- Sección del logo -->
    <div class="logo-section">
      <img src="/img/FlorScout.png" alt="Logo Scout" class="logo-img">
    </div>

    <!-- Sección del formulario de inicio de sesión -->
    <div class="login-card">
      <h1 class="login-title">Midgar</h1>
      <form class="login-form">
        <input type="text" placeholder="Usuario" class="input-field">
        <input type="password" placeholder="Contraseña" class="input-field">
        <button type="submit" class="login-button">Ingresar</button>
      </form>
        <a href="/rec_password" class="forgot-password">¿Has olvidado la contraseña?</a>
        <button class="create-account-button">
          <a href="/registro">Crear cuenta nueva</a></button>
    </div>
  </div>
</main>

