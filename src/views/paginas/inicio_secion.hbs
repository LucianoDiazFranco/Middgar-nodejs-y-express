
<main class="login-main">
  <div class="login-container">
    <!-- Sección del logo -->
    <div class="logo-section">
      <img src="/img/FlorScout.png" alt="Logo Scout" class="logo-img">
    </div>

    <!-- Sección del formulario de inicio de sesión -->
    <div class="login-card">
      <h1 class="login-title">Midgar</h1>
      <form id="login-form" method="POST" action="/login" class="login-form">
        <input type="email" placeholder="Email" class="input-field" name="email" value="{{email}}"  required>
        <input type="password" placeholder="Contraseña" class="input-field" name="password" required>
        <button type="submit" class="login-button">Ingresar</button>
        {{#if error}}
            <p class="text-red-500 font-bold text-lg mt-3">{{error}}</p>
        {{/if}}
      </form>
        <a href="/rec_password" class="forgot-password">¿Has olvidado la contraseña?</a>
        <a href="/registro"><button class="create-account-button">
          Crear cuenta nueva</button></a>
    </div>
  </div>
</main>

