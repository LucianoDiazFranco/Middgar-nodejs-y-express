
<main class="login-main">
  <div class="login-container">
    <!-- Sección del logo -->
    <div class="logo-section">
      <img src="/img/FlorScout.png" alt="Logo Scout" class="logo-img">
    </div>

    <!-- Sección del formulario de inicio de sesión -->
    <div class="login-card">
      <h1 class="login-title">Midgar</h1>
      <form id="login-form" class="login-form">
        <input type="text" placeholder="Usuario" class="input-field" name="user">
        <input type="password" placeholder="Contraseña" class="input-field" name="password">
        <button type="submit" class="login-button">Ingresar</button>
        <p class="error escondido">Error al iniciar sesion</p>
      </form>
        <a href="/rec_password" class="forgot-password">¿Has olvidado la contraseña?</a>
        <a href="/registro"><button class="create-account-button">
          Crear cuenta nueva</button></a>
    </div>
  </div>
</main>

